{
  "GET /api": {
    "description": "Serves up a JSON representation of all the available endpoints of the API"
  },
  "GET /api/topics": {
    "description": "Serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "Serves an array of all articles with pagination.",
    "queries": ["author", "topic", "sort_by", "order", "limit", "p"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6,
          "total_count": 5
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "Creates an article on the site",
    "queries": [],
    "requestBody": {
      "author": "String",
      "title": "String",
      "body": "String",
      "topic": "String",
      "article_img_url": "String OR undefined"
    },
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 23,
        "body": "Text from the article..",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "http://img-link.com/my_img.jpg",
        "comment_count": 0
      }      
    }
  },
  "GET /api/articles/:article_id": {
    "description": "Serves the requested article as a JSON object",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "body": "Text from the article..",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "http://img-link.com/my_img.jpg",
        "comment_count": 11
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Serves the requested comments as a JSON object",
    "queries": ["limit", "p"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 0,
          "created_at": "2018-05-30T15:59:13.341Z",
          "author": "mitch",
          "body": "Comment text...",
          "article_id": 3
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Creates a new comment for the specified article",
    "queries": [],
    "requestBody": {
      "username": "String",
      "body": "String"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "body": "The comment body...",
        "author": "user",
        "votes": 0,
        "created_at": "2024-05-29T15:09:41.214Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Updates the vote count for the specified article",
    "queries": [],
    "requestBody": {
      "inc_votes": "Number"
    },
    "exampleResponse": {
      "article_id": 2,
      "title": "Sony Vaio; or, The Laptop",
      "topic": "mitch",
      "author": "icellusedkars",
      "body": "Article body...",
      "created_at": "2020-10-16T05:03:00.000Z",
      "votes": 10,
      "article_img_url": "http://img-link.com/my_img.jpg"      
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "Updates the vote count for the specified comment",
    "queries": [],
    "requestBody": {
      "inc_votes": "Number"
    },
    "exampleResponse": {
      "comment_id": 1,
      "body": "The comment body...",
      "article_id": 2,
      "author": "butter_bridge",
      "votes": 34,
      "created_at": "2020-04-06T12:17:00.000Z"
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes the specified comment",
    "queries": []
  },
  "GET /api/users": {
    "description": "Returns all the users",
    "queries": [],
    "exampleResponse": [
      {
        "username": "butter_bridge",
        "name": "jonny",
        "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
      },
      {
        "username": "bobbybobbsthebobbmeister",
        "name": "dave",
        "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2014/06/Lime3.jpg"
      }
    ]
  },
  "GET /api/users/:username": {
    "description": "Returns the specified user",
    "queries": [],
    "exampleResponse": {
      "username": "butter_bridge",
      "name": "jonny",
      "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
    }
  }
}
